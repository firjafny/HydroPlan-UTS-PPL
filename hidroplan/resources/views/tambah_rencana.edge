<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>HydroPlan</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-[#E0F7F4] min-h-screen">
    <!-- Header -->
    <header class="flex justify-between items-center px-6 py-4 bg-white">
      <div class="flex items-center">
        <img
          src="https://i.imgur.com/zyy21lb.png"
          alt="HydroPlan logo"
          class="w-8 h-8 mr-2"
        />
        <h1 class="text-xl font-bold">HydroPlan</h1>
      </div>
      <div class="flex items-center space-x-4">
        <p>
          Hello, <span class="text-yellow-500 font-semibold">Harry Carpenter</span>
        </p>
        <i class="fas fa-bell text-lg"></i>
        <img
          src="https://storage.googleapis.com/a1aa/image/TJkclWjpIV-cpZwqR3_n6HkYMtJD99e6fYrA7d3ruLM.jpg"
          alt="User profile"
          class="w-10 h-10 rounded-full"
        />
      </div>
    </header>

    <!-- Main -->
    <main class="p-6">
      <a href="#" class="flex items-center text-lg mb-4 text-black font-semibold">
        <i class="fas fa-arrow-left mr-2"></i> Kembali
      </a>

    <div class="bg-white p-6 rounded-xl border border-teal-200 max-w-3xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-start realtive">
    <div class="space-y-3"
        <!-- Container Dropdown -->
        <div class="relative inline-block w-full">
        <label class="text-teal-600 font-semibold block mb-1">Pilih Jenis Tanaman</label>
        <button
            onclick="toggleDropdown('tanaman')"
            class="w-full px-4 py-2 border-2 border-teal-500 rounded-full flex justify-between items-center"
        >
            <span id="selected-tanaman">Pilih Tanaman</span>
            <i class="fas fa-chevron-down text-gray-500 ml-2"></i>
        </button>

            <!-- Opsi Dropdown -->
            <ul
                id="dropdown-tanaman"
                class="absolute z-10 w-full bg-white border border-teal-300 mt-1 rounded-md shadow-md hidden"
            >
                <li onclick="selectOption('tanaman', 'Selada')"
                    class="px-4 py-2 hover:bg-teal-100 cursor-pointer">Selada</li>
                <li onclick="selectOption('tanaman', 'Kangkung')"
                    class="px-4 py-2 hover:bg-teal-100 cursor-pointer">Kangkung</li>
                <li onclick="selectOption('tanaman', 'Bayam')"
                    class="px-4 py-2 hover:bg-teal-100 cursor-pointer">Bayam</li>
            </ul>
            </div>
            <!-- Container Dropdown Sistem -->
            <div class="relative inline-block w-full">
            <label class="text-teal-600 font-semibold block mb-1">Pilih Sistem Hidroponik</label>
            <button
                onclick="toggleDropdown('sistem')"
                class="w-full px-4 py-2 border-2 border-teal-500 rounded-full flex justify-between items-center"
            >
                <span id="selected-sistem">Pilih Sistem</span>
                <i class="fas fa-chevron-down text-gray-500 ml-2"></i>
            </button>

            <ul
                id="dropdown-sistem"
                class="absolute z-10 w-full bg-white border border-teal-300 mt-1 rounded-md shadow-md hidden"
            >
                <li onclick="selectOption('sistem', 'NFT')"
                    class="px-4 py-2 hover:bg-teal-100 cursor-pointer">NFT</li>
                <li onclick="selectOption('sistem', 'DWC')"
                    class="px-4 py-2 hover:bg-teal-100 cursor-pointer">DWC</li>
                <li onclick="selectOption('sistem', 'Wick System')"
                    class="px-4 py-2 hover:bg-teal-100 cursor-pointer">Wick System</li>
            </ul>
        </div>
        </div>

    <script>
    function toggleDropdown(type) {
        document.getElementById(`dropdown-${type}`).classList.toggle('hidden');
    }

    function selectOption(type, value) {
        document.getElementById(`selected-${type}`).innerText = value;
        document.getElementById(`dropdown-${type}`).classList.add('hidden');
    }

    window.addEventListener('click', function (e) {
        ['tanaman', 'sistem'].forEach(type => {
        const button = document.querySelector(`#selected-${type}`).parentNode;
        const dropdown = document.getElementById(`dropdown-${type}`);
        if (!button.contains(e.target)) {
            dropdown.classList.add('hidden');
        }
        });
    });
    </script>

        <!-- Kanan: Kalender -->
        <div class="w-full">
        <label class="text-teal-600 font-semibold block mb-2">Tanggal Mulai Tanam</label>
        <div class="border-2 border-teal-500 rounded-xl p-4">
            <div class="flex justify-between items-center mb-3 text-sm font-semibold text-gray-700">
            <span>April 2025</span>
            <div class="space-x-3">
                <button><i class="fas fa-chevron-left"></i></button>
                <button><i class="fas fa-chevron-right"></i></button>
            </div>
            </div>
            <div class="grid grid-cols-7 text-center text-xs text-gray-500 mb-1">
            <span>m</span><span>s</span><span>s</span><span>r</span><span>k</span><span>j</span><span>s</span>
            </div>
            <div class="grid grid-cols-7 text-center text-sm text-gray-700 gap-1">
            <span class="text-gray-400">01</span>
            <span class="bg-yellow-300 text-white rounded-full">02</span>
            <span>03</span><span>04</span><span>05</span><span>06</span><span>07</span>
            <span>08</span><span>09</span><span>10</span><span>11</span><span>12</span><span>13</span><span>14</span>
            <span>15</span><span>16</span><span>17</span><span>18</span><span>19</span><span>20</span><span>21</span>
            <span>22</span><span>23</span><span>24</span><span>25</span><span>26</span><span>27</span><span>28</span>
            <span>29</span><span>30</span>
            <span class="text-gray-300">01</span><span class="text-gray-300">02</span><span class="text-gray-300">03</span><span class="text-gray-300">04</span>
            </div>
        </div>
        </div>
    </div>

    <!-- Catatan -->
    <div class="mt-6">
        <label for="notes" class="block text-teal-600 font-semibold mb-1">Catatan</label>
        <textarea
        id="notes"
        placeholder="Masukkan Pesan..."
        class="w-full p-3 border-2 border-teal-500 rounded-xl"
        ></textarea>
    </div>

    <!-- Tombol Simpan -->
    <div class="flex justify-end mt-6">
    <a
        href="dashboard"
        class="bg-yellow-400 hover:bg-yellow-500 text-white font-semibold px-5 py-2 text-sm rounded-full text-sm">
        Simpan
    </a>
    </div>
    </div>
    </main>
  </body>
</html>
